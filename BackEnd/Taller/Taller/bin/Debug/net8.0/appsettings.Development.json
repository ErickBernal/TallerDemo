{
    "Logging": {
        "throwConfigExceptions": true,
        "targets": {
            "async": true,  
            "WarnLogs": {
                "type": "File",
                "fileName": "c:\\temp\\LogsCentralizador\\WarnLogs.txt"
            },
            "DebugLogs": {
                "type": "File",
                "fileName": "c:\\temp\\LogsCentralizador\\DebugLogs.txt"
            },
            "AllLogs": {
                "type": "File",
                "fileName": "c:\\temp\\LogsCentralizador\\AllLogs.txt"
            },

            "logconsole": {
                "type": "Console"

            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "DebugLogs"
            },
            {
                "logger": "*",
                "minLevel": "Warn",
                "writeTo": "WarnLogs"
            },
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "logconsole"
            },
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "AllLogs"
            }
        ]
    }
}
